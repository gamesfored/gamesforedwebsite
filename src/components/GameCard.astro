---
export interface Props {
  image: string;
  title: string;
  description: string;
  colorClass: string;
}

const { image, title, description, colorClass } = Astro.props;
---

<div class={`game-card ${colorClass}`}>
  <div class="game-card-image">
    <img src={image} alt={title} />
        <h3>{title}</h3>
  </div>
  <div class="game-card-content">
    <p>{description}</p>
  </div>
</div>

<style>
.game-card {
  border-radius: 24px;
  overflow: hidden;
  border: 4px solid;
  display: flex;
  flex-direction: column;
  aspect-ratio: 5 / 7;
  width: 100%;
  transition: box-shadow 0.3s ease-out;
}

.game-card-image {
  flex: 1;
  overflow: hidden;
  background: var(--color-white);
  padding: 2rem 2rem 3rem 2rem;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: 1rem;
}

.game-card-image img {
  width: 100%;
  flex: 1;
  object-fit: contain;
  border-radius: 12px;
}

.game-card-content {
  flex-shrink: 0;
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.game-card h3 {
  font-family: "grenadine-mvb", sans-serif;
  font-size: 1.25rem;
  font-weight: 500;
  text-align: center;
  margin: 0;
  flex-shrink: 0;
}

.game-card p {
  font-size: 0.9rem;
  line-height: 1.5;
  color: var(--color-white);
  opacity: 0.95;
}

.card-1 {
  border-color: var(--color-1);
  background: var(--color-1);
}

.card-1 .game-card-content {
  background: var(--color-1);
}

.card-1 h3 {
  color: var(--color-1);
}

.card-2 {
  border-color: var(--color-2);
  background: var(--color-2);
}

.card-2 .game-card-content {
  background: var(--color-2);
}

.card-2 h3 {
  color: var(--color-2);
}

.card-3 {
  border-color: var(--color-3);
  background: var(--color-3);
}

.card-3 .game-card-content {
  background: var(--color-3);
}

.card-3 h3 {
  color: var(--color-3);
}
</style>