---
export interface Props {
  coverImage: string;
  publicationLogo: string;
  heading: string;
  description: string;
  author: string;
  link: string;
}

const { coverImage, publicationLogo, heading, description, author, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="article-card">
  <div class="article-image-container">
    <img src={coverImage} alt={heading} class="article-cover" />
    <div class="article-overlay">
      <img src={publicationLogo} alt={author} class="publication-logo" />
    </div>
  </div>
  <div class="article-content">
    <h3 class="article-heading">{heading}</h3>
    <p class="article-description">{description}</p>
    <div class="article-meta">
      <span class="article-author">{author}</span>
      <span class="article-read-more">Read Article â†’</span>
    </div>
  </div>
</a>

<style>
.article-card {
  display: flex;
  flex-direction: column;
  background: var(--color-white);
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  text-decoration: none;
  color: inherit;
  height: 100%;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.article-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.article-image-container {
  position: relative;
  width: 100%;
  height: 240px;
  overflow: hidden;
  background: linear-gradient(135deg, var(--color-1) 0%, var(--color-2) 100%);
}

.article-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.article-card:hover .article-cover {
  transform: scale(1.05);
}

.article-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1.5rem;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  display: flex;
  align-items: flex-end;
}

.publication-logo {
  height: 40px;
  width: auto;
  max-width: 150px;
  object-fit: contain;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  background: rgba(255, 255, 255, 0.95);
  padding: 0.5rem;
  border-radius: 8px;
}

.article-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  flex: 1;
}

.article-heading {
  font-family: "grenadine-mvb", sans-serif;
  font-size: 1.4rem;
  font-weight: 600;
  line-height: 1.3;
  color: var(--color-text);
  margin: 0;
  transition: color 0.3s ease;
}

.article-card:hover .article-heading {
  color: var(--color-2);
}

.article-description {
  font-size: 0.95rem;
  line-height: 1.6;
  color: var(--color-text);
  opacity: 0.8;
  margin: 0;
  flex: 1;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 1rem;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.article-author {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--color-text);
  opacity: 0.7;
}

.article-read-more {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--color-2);
  transition: transform 0.3s ease;
}

.article-card:hover .article-read-more {
  transform: translateX(4px);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .article-image-container {
    height: 200px;
  }

  .article-heading {
    font-size: 1.2rem;
  }

  .article-description {
    font-size: 0.9rem;
  }
}
</style>
